@*Define model*@

@model Book

@{
	ViewData["Title"] = "Book details";
}

<div class="row">
	<div class="col-md-8 offset-2">
		<div class="card mb-3" style="max-width: 540px;">
			<div class="row g-0">
				<div class="col-md-12">
					<div class="card-header text-white bg-info">
						<p class="card-text">
							<h5 class="card-title">
								@Model.Title
							</h5>
						</p>
					</div>
				</div>
				<div class="col-md-4">
					<img src="@Model.ImageURL" width="100%" alt="@Model.Title">
				</div>
				<div class="col-md-6">
					<div class="card-body">
						<p class="card-text">@Model.Description</p>
						<p class="card-text"><b>Category: </b>@Model.BookCategory</p>
						<p class="card-text"><b>Writer: </b><a asp-controller="Writers" asp-action="Details" asp-route-id="@Model.WriterId">@Model.Writer.FullName</a></p>
						<p class="card-text"><b>Release date: </b>@Model.ReleaseDate.ToString("dd MMM yy")</p>
					</div>
				</div>
				<div class="col-md-12">
					<div class="card-footer">
						<p class="card-text">
							<a class="btn btn-outline-primary float-right" asp-action="Index">Back to list</a>
							<a class="btn btn-success text-white"><i class="bi bi-cart-full"></i>Add to cart (Price @Model.Price.ToString("c")</a>
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
